<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/event_icon"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/black_transparent70"
        android:layout_alignBottom="@+id/event_icon"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/event_month"
            android:layout_width="44dp"
            android:layout_height="16dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:textSize="10sp"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:textColor="@android:color/white"

            android:text="MAR"
            />
        
        <TextView
            android:layout_width="44dp"
            android:layout_height="26dp"
            android:id="@+id/event_day"
            android:layout_below="@id/event_month"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="1dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:gravity="center"

            android:text="12"
            />

        <TextView
            android:id="@+id/event_name"
            android:layout_toRightOf="@id/event_month"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:fontFamily="Roboto Medium"
            android:textSize="14sp"
            android:textColor="@color/white_transparent80_fix"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="BAND"/>

        <TextView
            android:id="@+id/event_place"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:fontFamily="Roboto Regular"
            android:layout_below="@id/event_name"
            android:layout_toRightOf="@id/event_month"
            android:background="@color/black_transparent70"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingStart="8dp"
            android:text="EVENT PLCE"
            android:gravity="center_vertical"/>

    </RelativeLayout>

</RelativeLayout>