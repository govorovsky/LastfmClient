<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/event_icon"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="44dp"
        android:layout_height="26dp"
        android:id="@+id/event_day"
        android:layout_alignBottom="@id/event_icon"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="1dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/event_month"
        android:layout_width="44dp"
        android:layout_height="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="1dp"
        android:textSize="10sp"
        android:layout_above="@id/event_day"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:textColor="@android:color/white"/>


    <TextView
        android:id="@+id/event_place"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:fontFamily="Roboto Regular"
        android:layout_toRightOf="@id/event_month"
        android:layout_alignBottom="@id/event_icon"
        android:background="@color/black_transparent70"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:paddingStart="8dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/event_name"
        android:layout_toRightOf="@id/event_month"
        android:layout_above="@id/event_place"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:fontFamily="Roboto Medium"
        android:textSize="14sp"
        android:textColor="@color/white_transparent80_fix"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:background="@color/black_transparent70"/>


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/event_band1_icon"
        android:layout_width="@dimen/event_band_icon_size"
        android:layout_height="@dimen/event_band_icon_size"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_above="@id/event_name"
        app:border_color="@color/white"
        app:border_width="2dp"
        android:layout_alignParentStart="false"/>


    <TextView
        android:background="@drawable/event_attendance_shape"
        android:id="@+id/event_attendance"
        android:layout_width="@dimen/event_band_icon_size"
        android:layout_height="@dimen/event_band_icon_size"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_above="@id/event_name"
        android:gravity="center"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/event_band2_icon"
        android:layout_width="@dimen/event_band_icon_size"
        android:layout_height="@dimen/event_band_icon_size"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="4dp"
        android:layout_above="@id/event_name"
        app:border_color="@color/white"
        app:border_width="2dp"
        android:layout_alignParentStart="false" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/event_band3_icon"
        android:layout_width="@dimen/event_band_icon_size"
        android:layout_height="@dimen/event_band_icon_size"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="4dp"
        android:layout_above="@id/event_name"
        app:border_color="@color/white"
        app:border_width="30dp"
        android:layout_alignParentStart="false" />

</RelativeLayout>